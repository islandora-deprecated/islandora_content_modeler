/**
 *
 * @param Array $form_state
 * @param Array $params
 * @return string
 */
function icm_collection_rollback(&$form_state, $params=null) {
  if (is_array($params)) {
    $collection_pid = $params[0];
  }
  else {
    $collection_pid = $form_state['post']['form']['model_pid'];
  }
  $form['form'] = array(
    '#type' => 'fieldset',
    '#title' => t('Rollback Collection Policy <b>%$collection_pid</b>', array('%$collection_pid' => $collection_pid)),
    '#tree' => TRUE,
  );
  $collection_policy = CollectionPolicy::loadFromCollection($collection_pid);
  if ($collection_policy === false) {
    form_set_error('', t('Error: Unable to load collection policy <b>%c_pid</b>.', array('%c_pid' => $collection_pid)));
    $form['form']['c_pid'] = array('#type' => 'hidden', '#value' => $collection_pid);
    $form['form']['cancel'] = array('#type' => 'button', '#value' => t('Cancel'), '#id' => 'cancel');
    return;
  }
  $history = $collection_policy->getHistory();
  $options = array();
  foreach ($history as $version) {
    $options[$version['versionID']] = date(DATE_RFC822, strtotime($version['createDate']));
  }
  if ($history !== false && count($history) > 0) {
    $form['form']['warning'] = array('#value' => '<b>Warning:</b> Rolling back a datastream will purge all versions up-to the selected datastream.');
    $form['form']['cur'] = array(
      '#type' => 'item',
      '#title' => t('Current Version:'),
      '#value' => date(DATE_RFC822, strtotime($history[0]['createDate']))
    );
    $form['form']['version'] = array(
      '#type' => 'select',
      '#title' => t('Version'),
      '#options' => $options
    );
    $form['form']['removeOlder'] = array(
      '#type' => 'checkbox',
      '#title' => 'Purge Older Versions',
      '#description' => 'If enabled, also purges versions of the datastream that are OLDER than the selected, effectively leaving only the selected version.'
    );
    $form['form']['submit'] = array('#type' => 'submit', '#value' => t('Save'));
  }
  else {
    $form['form']['version'] = array(
      '#type' => 'item',
      '#title' => t('Rollback to Version:'),
      '#value' => t('only one version available.')
    );
  }
  $form['form']['c_pid'] = array('#type' => 'hidden', '#value' => $collection_pid);
  $form['form']['cancel'] = array('#type' => 'button', '#value' => t('Cancel'), '#id' => 'cancel');
  return $form;
}

/**
 *
 * @param Array $form
 * @param Array $form_state
 */
function icm_collection_rollback_validate($form, &$form_state) {
  if (form_get_errors() !== NULL)
    return;

  $collection_policy = CollectionPolicy::loadFromCollection($form_state['values']['form']['c_pid']);
  if ($collection_policy === FALSE) {
    form_set_error('', t('Error: Unable to load collection policy <b>%c_pid</b>.',
            array('%c_pid' => htmlentities($form_state['values']['form']['c_pid']))));
  }
  $history = $collection_policy->getHistory();
  $found = false;
  foreach ($history as $key => $version) {
    if ($version['versionID'] == $form_state['values']['form']['version']) {
      $found = $key;
      break;
    }
  }
  if ($found === false) {
    form_set_error('', t('Error: Selected version was not found.  Please try again.'));
  }
  else if ($found == 0 && $form_state['values']['form']['removeOlder'] == 0) {
    form_set_error('', t('Error: Selected version is the current version.  Nothing changed.'));
  }
  else {
    $success = true;
    if ($found > 0) {
      $start_date = $history[$found - 1]['createDate'];
      $success = $collection_policy->purgeVersions($start_date, null);
    }
    if ($form_state['values']['form']['removeOlder'] == 1 && isset($history[$found + 1])) {
      $end_date = $history[$found + 1]['createDate'];
      $success = $success && $collection_policy->purgeVersions(null, $end_date);
    }
    if ($success) {
      echo 'success:' . t('Successfully rolled back version of collection policy <b>%c_pid</b>.', array('%c_pid' => $collection_policy->pid));
      exit();
    }
    else {
      form_set_error('', t('Error: Unable to roll back version.  Check watchdog logs.'));
    }
  }
}

