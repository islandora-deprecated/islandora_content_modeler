function icm_get_modules() {
  $files = module_rebuild_cache();
  $options = array('');
  foreach ($files as $key => $val) {
    //only list islandora modules
    if ($val->info['package'] == 'Fedora Repository') {
      $options[$key] = $key;
    }
  }
  return $options;
}

