    }
    else {
      form_set_error('form][name', t('Error: Unable to update edit metadata method to model <b>%model_pid</b>.', array('%model_pid' => $content_model->pid)));
    }
  }
  else {
    form_set_error('', t('Error: Unable to load content model <b>%cm_pid</b>.', array('%cm_pid' => htmlentities($form_state['values']['form']['model_pid']))));
  }
}

